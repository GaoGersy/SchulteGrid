<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >


    <LinearLayout
            android:id="@+id/container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <Chronometer
                android:id="@+id/chronometer"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                />
        <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/ligthPuple"
                android:layout_marginBottom="20dp"
                >
            <RadioButton
                    android:id="@+id/general"
                    android:layout_weight="1"
                    android:checked="true"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="普通"
                    />
            <RadioButton
                    android:id="@+id/ever_changing"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="千变万化"
                    />
            <RadioButton
                    android:id="@+id/no_hide"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="顽固"
                    />
            <RadioButton
                    android:textColor="@color/white"
                    android:id="@+id/ever_changing_no_hide"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="千变万化+顽固"
                    />
        </RadioGroup>

    </LinearLayout>
    <FrameLayout
            android:id="@+id/fl_container"
            android:visibility="gone"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                >
            <TextView
                    android:id="@+id/tv_result"
                    android:layout_gravity="center"
                    android:text="asdfasdfasdfasdfasdfasdfasdfasd"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            <TextView
                    android:id="@+id/tv_retry"
                    android:layout_marginTop="20dp"
                    android:text="再试一次"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_purple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
